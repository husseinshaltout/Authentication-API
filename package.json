{
  "name": "authentication-api",
  "version": "1.0.0",
  "description": "A simple Authentication API",
  "main": "index.js",
  "scripts": {
    "prep:paths": "tscpaths -p tsconfig.json -s ./src -o ./dist",
    "prep:clean": "rimraf dist/",
    "build": "tsc && npm run prep:paths",
    "compile": "tsc ",
    "start:dev": "ts-node-dev --project tsconfig.json -r tsconfig-paths/register --files src/server.ts",
    "start:prod": "env NODE_ENV=production node dist/server.js",
    "test": "cross-env NODE_ENV=test && jest --detectOpenHandles --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/husseinshaltout/Authentication-API.git"
  },
  "author": "Hussein Shaltout",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/husseinshaltout/Authentication-API/issues"
  },
  "homepage": "https://github.com/husseinshaltout/Authentication-API#readme",
  "dependencies": {
    "bcrypt": "^5.1.0",
    "celebrate": "^15.0.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "helmet": "^6.0.1",
    "joi": "^17.7.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "mongo-sanitize": "^1.1.0",
    "mongoose": "^6.8.0",
    "morgan": "^1.10.0",
    "nanoid": "^3.1.23",
    "slugify": "^1.6.5",
    "validator": "^13.7.0",
    "winston": "^3.8.2",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.14",
    "@types/express-session": "^1.17.10",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/mongo-sanitize": "^1.0.1",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.11.12",
    "@types/supertest": "^2.0.12",
    "@types/validator": "^13.7.10",
    "@typescript-eslint/eslint-plugin": "^5.46.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.29.0",
    "jest": "^29.7.0",
    "prettier": "^2.8.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.3",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.1.1",
    "typescript": "^4.9.4"
  }
}
